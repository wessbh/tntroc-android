<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">>

    <ImageView
        android:id="@+id/imageMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="160dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_above="@+id/name"
            android:layout_marginBottom="-55dp"
            android:orientation="horizontal"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="1dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Michael Angelo"

            android:textColor="#009688"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="Tunisie, Nabeul"
            android:textColor="#009688"
            android:textSize="12sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/nbr_annonces"
        android:layout_above="@+id/txt_annonces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:layout_alignStart="@id/txt_annonces"
        android:text="0"/>
    <TextView
        android:id="@+id/nbr_achats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_achats"
        android:layout_toRightOf="@+id/txt_annonces"
        android:layout_marginEnd="55dp"
        android:text="0"/>
    <TextView
        android:id="@+id/nbr_echanges"
        android:layout_width="wrap_content"
        android:layout_above="@+id/txt_echanges"
        android:layout_toRightOf="@+id/txt_achats"
        android:layout_height="wrap_content"
        android:text="0"/>

    <TextView
        android:layout_above="@+id/relative_body"
        android:id="@+id/txt_annonces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:text="Annonces"/>
    <TextView
        android:id="@+id/txt_achats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/relative_body"
        android:layout_toRightOf="@id/txt_annonces"
        android:layout_marginEnd="55dp"
        android:text="Achats"/>
    <TextView
        android:layout_above="@id/relative_body"
        android:layout_toRightOf="@+id/txt_achats"
        android:id="@+id/txt_echanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Echanges"/>
    <RelativeLayout
        android:id="@+id/relative_body"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/btn_editer"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-1dp">


        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent" />

            <LinearLayout
                android:id="@+id/layout_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:contentDescription="icone email"
                    android:src="@drawable/ic_email"
                    android:tint="@color/accent" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="jhondoe@gmail.com" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="phone number.."
                    android:inputType="number"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_editer"
        style="@style/ButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:text="editer"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</RelativeLayout>